# Dropbox API Configuration
# Option 1: Use refresh token (recommended for long-running services)
DROPBOX_REFRESH_TOKEN=your_refresh_token_here
DROPBOX_APP_KEY=your_app_key_here
DROPBOX_APP_SECRET=your_app_secret_here

# Option 2: Use access token (simpler but may expire)
DROPBOX_ACCESS_TOKEN=your_access_token_here

# Dropbox Folder Configuration
DROPBOX_WATCH_FOLDER=/All files/Video Content/Final Cuts  # Path to monitor in Dropbox

# Monitoring Configuration
CHECK_INTERVAL_MINUTES=30  # Check every 30 minutes

# Clipper Integration
CLIPPER_INPUT_DIR=/opt/clipper/data/input

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#video-notifications

# Dropbox Output Configuration
DROPBOX_OUTPUT_FOLDER_URL=https://www.dropbox.com/scl/fo/your-shared-folder-link

# Webhook Configuration
WEBHOOK_PORT=8080  # Port for webhook server
WEBHOOK_HOST=127.0.0.1  # Use 127.0.0.1 for production (with nginx), 0.0.0.0 for development
DROPBOX_WEBHOOK_APP_SECRET=your_webhook_app_secret  # Optional: for verifying webhook signatures